@model Category

<form method="post" asp-action="Edit">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text">Update Category</h1>
            <hr />
        </div>
        <div class="mb-3">
            <label>Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-bg-danger"></span>
        </div>
        <br />
        <div class="mb-3">
            <label asp-for="CategoryDescription"></label>
            <input asp-for="CategoryDescription" class="form-control" />
            <span asp-validation-for="CategoryDescription" class="text-bg-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width:200px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:200px">
            Back to List
        </a>
    </div>

</form>