@model InventoryManagementProject.Models.Category
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="DeletePost">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Name</label>
            <input asp-for="CategoryName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryDescription"></label>
            <input asp-for="CategoryDescription" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:200px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:200px">
            Back to List
        </a>
    </div>
</form>